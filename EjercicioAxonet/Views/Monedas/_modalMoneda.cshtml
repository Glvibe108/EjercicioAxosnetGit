<form id="formMoneda" name="formMoneda">
    <div class="modal-header">
        <h5 class="modal-title" id="MonedaModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    </div>
    <div class="modal-body">
        <input type="hidden" name="idMoneda" id="idMoneda" value="" />
        <input type="hidden" value="" class="nuevoElemento" data-request-url="@Url.Action("NuevaMoneda", "Monedas")" />
        <input type="hidden" value="" class="editarElemento" data-request-url="@Url.Action("EditarMoneda", "Monedas")" />
        <div class="form-group">
            <label for="moneda"><span style="color:red">*</span>Moneda:</label>
            <input type="text" class="form-control" id="moneda" name="moneda" placeholder="Ingrese la moneda" required>
        </div>
        <div class="form-group">
            <label for="abreviatura"><span style="color:red">*</span>Abreviatura:</label>
            <input type="text" class="form-control" id="abreviatura" name="abreviatura" placeholder="Ingrese la abreviatura" required>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" id="guardarMoneda" onclick="GuardarMoneda()">Guardar</button>
    </div>
</form>